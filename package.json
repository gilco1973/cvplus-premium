{
  "name": "@cvplus/premium",
  "version": "4.0.0",
  "description": "Premium subscription, billing, analytics, and enterprise management module for CVPlus",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    },
    "./backend": {
      "types": "./dist/backend/index.d.ts",
      "import": "./dist/backend/index.esm.js", 
      "require": "./dist/backend/index.js"
    },
    "./types": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/types/index.esm.js",
      "require": "./dist/types/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:payments": "jest --testPathPattern=payments",
    "test:monitoring": "jest --testPathPattern=monitoring",
    "test:functions": "jest --testPathPattern=functions",
    "test:comprehensive": "./scripts/run-tests.sh",
    "clean": "rimraf dist",
    "validate-dependencies": "./scripts/validate-dependencies.sh"
  },
  "keywords": [
    "premium",
    "subscription",
    "billing",
    "stripe",
    "paypal",
    "payment",
    "analytics",
    "enterprise",
    "pricing",
    "rbac",
    "sso",
    "ml",
    "react",
    "typescript"
  ],
  "author": "Gil Klainert",
  "license": "MIT",
  "peerDependencies": {
    "react": "^18.0.0",
    "firebase": "^10.0.0",
    "stripe": "^15.0.0"
  },
  "dependencies": {
    "@stripe/stripe-js": "^4.1.0",
    "@stripe/react-stripe-js": "^2.7.3",
    "@paypal/checkout-server-sdk": "^1.0.3",
    "@paypal/react-paypal-js": "^8.1.3",
    "axios": "^1.7.4",
    "firebase-admin": "^12.1.0",
    "firebase-functions": "^5.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.5",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3"
  }
}