{
  "name": "@cvplus/premium",
  "version": "1.0.0",
  "description": "Premium subscription and billing module for CVPlus with Stripe integration",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.esm.js",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "type-check": "tsc --noEmit",
    "lint": "eslint src --ext .ts,.tsx",
    "test": "jest",
    "test:watch": "jest --watch",
    "clean": "rimraf dist"
  },
  "keywords": [
    "premium",
    "subscription",
    "billing",
    "stripe",
    "payment",
    "react",
    "typescript"
  ],
  "author": "Gil Klainert",
  "license": "MIT",
  "peerDependencies": {
    "@cvplus/core": "^1.0.0",
    "react": "^18.0.0",
    "firebase": "^10.0.0",
    "stripe": "^15.0.0"
  },
  "dependencies": {
    "@stripe/stripe-js": "^4.1.0",
    "@stripe/react-stripe-js": "^2.7.3",
    "firebase-admin": "^12.1.0",
    "firebase-functions": "^5.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "eslint": "^8.57.0",
    "jest": "^29.7.0",
    "rimraf": "^5.0.7",
    "ts-jest": "^29.1.5",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3"
  }
}